<div class="well">
  <%= form_for(comment) do |f|%>
    <div class="form-group">
      <%= f.label :user_id %>
      <br>
      <%= f.text_field :user_id, html: {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :conent %>
      <br>
      <%= f.text_field :content, html: {class: "form-control"} %>
    </div>

    <br>
    <%= f.submit(@comment.new_record? ? '新增評論' : '修改評論', class:"btn btn-primary") %>
  <% end %>
</div>